@model List<TeaShopApi.WebUI.Dtos.AboutPageDtos.ResultAboutPageDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<!-- [ sample-page ] start -->
	<div class="col-sm-12">
		<div class="card">

			<div class="card-header">
				<h5>Hakkında Sayfası</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<th>#</th>
						<th>Resim</th>
						<th>Video</th>
						<th>Açıklama</th>
						<th>Tel</th>
					
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.AboutPageID</td>
							<td>@item.ImageUrl</td>
							<td>@item.VideoUrl</td>
							<td>@item.Description</td>
							<td>@item.No</td>

							<td><a href="/Admin/AboutPage/DeleteAboutPage/@item.AboutPageID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/AboutPage/UpdateAboutPage/@item.AboutPageID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</table>
				<a href="/Admin/AboutPage/CreateAboutPage" class="btn btn-outline-primary">Yeni Hakkında Girişi</a>

			</div>
		</div>
	</div>
	<!-- [ sample-page ] end -->
</div>