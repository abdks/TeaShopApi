@using TeaShopApi.WebUI.Dtos.MainPageDtos
@model UpdateMainPageDto
@{
    ViewData["Title"] = "UpdateMainPage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden"asp-for="MainPageID"/>
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />


    <button class="btn btn-primary">Ekle</button>
</form>


