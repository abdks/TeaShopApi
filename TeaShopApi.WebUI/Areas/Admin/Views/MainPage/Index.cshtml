@model List<TeaShopApi.WebUI.Dtos.MainPageDtos.ResultMainPageDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<!-- [ sample-page ] start -->
	<div class="col-sm-12">
		<div class="card">

			<div class="card-header">
				<h5>Ana Sayfa</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<th>#</th>
						<th>Başlık</th>
						<th>Açıklama</th>
						<th>Resim</th>
					
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.MainPageID</td>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td>@item.ImageUrl</td>

							<td><a href="/Admin/MainPage/DeleteMainPage/@item.MainPageID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/MainPage/UpdateMainPage/@item.MainPageID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</table>
				<a href="/Admin/MainPage/CreateMainPage" class="btn btn-outline-primary">Yeni Anasayfa Girişi</a>

			</div>
		</div>
	</div>
	<!-- [ sample-page ] end -->
</div>