@using TeaShopApi.WebUI.Dtos.MainFoodDtos
@model UpdateMainFoodDto
@{
    ViewData["Title"] = "UpdateMainFood";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<h1>Ana Yemek Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="MainFoodID" />
    <label>Adı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Resimi</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Fiyatı</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />

    <button class="btn btn-primary">Ekle</button>
</form>
