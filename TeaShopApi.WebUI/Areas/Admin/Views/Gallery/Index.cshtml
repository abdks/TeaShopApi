@model List<TeaShopApi.WebUI.Dtos.GalleryDtos.ResultGalleryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<!-- [ sample-page ] start -->
	<div class="col-sm-12">
		<div class="card">

			<div class="card-header">
				<h5>Galeri Sayfası</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<th>#</th>
						<th>Resim</th>
						
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.GalleryID</td>
							<td>@item.ImageUrl</td>

							<td><a href="/Admin/Gallery/DeleteGallery/@item.GalleryID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Gallery/UpdateGallery/@item.GalleryID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</table>
				<a href="/Admin/Gallery/CreateGallery" class="btn btn-outline-primary">Yeni Resim Girişi</a>

			</div>
		</div>
	</div>
	<!-- [ sample-page ] end -->
</div>