@model List<TeaShopApi.WebUI.Dtos.EventsDtos.ResultEventsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<!-- [ sample-page ] start -->
	<div class="col-sm-12">
		<div class="card">

			<div class="card-header">
				<h5>Etkinlik Sayfası</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<th>#</th>
						<th>Başlık</th>
						<th>Açıklama</th>
						<th>Fiyat</th>
						<th>Resim</th>
						
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.EventsID</td>
							<td>@item.Title</td>
							<td>@item.Description	</td>
							<td>@item.Price</td>
							<td>@item.Image</td>

							<td><a href="/Admin/Event/DeleteEvents/@item.EventsID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Event/UpdateEvents/@item.EventsID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</table>
				<a href="/Admin/Event/CreateEvents" class="btn btn-outline-primary">Yeni Hakkında Girişi</a>

			</div>
		</div>
	</div>
	<!-- [ sample-page ] end -->
</div>