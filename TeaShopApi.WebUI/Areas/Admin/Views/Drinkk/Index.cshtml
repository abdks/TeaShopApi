@model List<TeaShopApi.WebUI.Dtos.DrinkDtos.ResultDrinkDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<!-- [ sample-page ] start -->
	<div class="col-sm-12">
		<div class="card">

			<div class="card-header">
				<h5>Menü Sayfası</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<th>#</th>
						<th>Adı</th>
						<th>Resimi</th>
						<th>Açıklaması</th>
						<th>Fiyatı</th>
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.DrinksID</td>
							<td>@item.Title</td>
							<td>@item.ImageUrl</td>
							<td>@item.Description</td>
							<td>@item.Price</td>
							<td><a href="/Admin/Drinkk/DeleteDrinks/@item.DrinksID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Drinkk/UpdateDrinks/@item.DrinksID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</table>
				<a href="/Admin/Drinkk/CreateDrink" class="btn btn-outline-primary">Yeni Hakkında Girişi</a>

			</div>
		</div>
	</div>
	<!-- [ sample-page ] end -->
</div>